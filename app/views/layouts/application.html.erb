<!DOCTYPE html>
<html>
  <head>
    <title>Gezgorprojecik</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="ui inverted purple menu huge">
      <%= link_to "Anasayfa", root_path, class:"active item" %>
      <% if user_signed_in? %>
        <a class="item">Akış</a>
        <div class="right menu">
          <%= link_to 'Çıkış Yap', destroy_user_session_path, method: :delete, class:"ui item" %>
        </div>
      <% end %>
    </div>

    <div class="ui container">
      <%= yield %>
    </div>
  </body>
</html>
