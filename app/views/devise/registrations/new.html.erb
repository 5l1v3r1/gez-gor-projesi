<h3 style="text-align: center; color:#B413EC;">Sign Up</h3><br>

<%= form_for(resource, as: resource_name,:html => {:class => 'ui form'},url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">

    <div class="two fields">
      <div class="field">
      <label>Username</label>
        <%= f.text_field :username, autofocus: true, autocomplete: "username",placeholder: true %>
      </div>

      <div class="field">
      <label>Email</label>
       <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: true %>
      </div>
    </div>
  </div>
  <div class="two fields">
    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", placeholder: true  %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: true  %>
    </div>
  </div><br>
  <div class="actions" style="text-align: center;">
    <%= f.submit "Sign up", class:"ui inverted violet button" %>
  </div><br>
  <div style="text-align:center;">
<%= render "devise/shared/links" %>
<%= link_to "Geri", root_path, class:"ui purple button" %>
</div>
<% end %>
